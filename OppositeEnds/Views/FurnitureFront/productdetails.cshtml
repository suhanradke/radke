@model OppositeEnds.Models.Furniture
@{
    ViewBag.Title = "productdetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ProductBody">
    <button class="btn btn-lg bg-primary Back" onclick="location.href='@Url.Action("Index", "FurnitureFront")'; return false;"><span class="fa fa-arrow-left">  Back</span></button>

    <div class="ProductContent">
        <div class="row">
            <div class="col-md-offset-1 col-md-3">
                <div class="well second">

                    <img class="img-responsive productItem" src="~/Content/images/Furnitures/@(Model.Picture).jpg" width="250">
                </div>

            </div>

            <div class="col-md-7">
                <div class="well first">
                    <div class="productCart">
                        <h1>Name : @Model.Name</h1>

                       
                    </div>

                        <h1>Category : </h1>


                    
                    <h1>Price : $ @Model.Price </h1>

                    <div class="row Goup">
                        <div class="col-sm-2"><h1>Details : </h1></div> <div class="col-sm-6 Cat">@Model.Details </h1></div>
                    </div>


                    @*@Html.ActionLink("Pay with Paypal Account", "PaymentWithPaypal", "Paypal", new { amt = "13.05" }, null)*@

                    <div class="btnBox">
                    <btn class="btn btn-primary btn-lg Cart2">
                        <span class="glyphicon glyphicon-shopping-cart"></span>@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.FurnitureId, type = "furniture" }, null)
                    </btn>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
